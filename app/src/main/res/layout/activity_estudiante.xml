<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estudiante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alan_.actividad_4a.EstudianteActivity">

    <TextView
        android:text="Estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_title"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="31dp"
        android:id="@+id/tv_nombre"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Nota Media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_media"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_curso"
        android:layout_alignStart="@+id/tv_ciclo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/tv_media"
        android:layout_marginTop="20dp"
        android:id="@+id/et_nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/et_edad"
        android:layout_alignEnd="@+id/et_edad"
        android:layout_marginTop="12dp"
        android:id="@+id/et_ciclo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_curso"
        android:layout_alignBaseline="@+id/tv_curso"
        android:layout_alignBottom="@+id/tv_curso"
        android:layout_alignStart="@+id/et_ciclo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_media"
        android:layout_alignBaseline="@+id/tv_media"
        android:layout_alignBottom="@+id/tv_media"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_media"
        android:layout_alignEnd="@+id/tv_title"
        android:layout_marginTop="66dp"
        android:id="@+id/bt_guardar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_edad"
        android:layout_below="@+id/et_nombre"
        android:layout_alignStart="@+id/et_nombre"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_edad"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_edad"
        android:layout_alignBottom="@+id/et_edad"
        android:layout_alignStart="@+id/tv_nombre" />

    <TextView
        android:text="Ciclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ciclo"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_ciclo"
        android:layout_alignBottom="@+id/et_ciclo"
        android:layout_alignStart="@+id/tv_edad" />

    <TextView
        android:text="Curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/tv_curso"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/et_ciclo"
        android:layout_alignStart="@+id/tv_media" />
</RelativeLayout>
