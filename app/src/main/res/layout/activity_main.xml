<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alan_.actividad_4a.MainActivity">

    <Button
        android:text="Introducir Estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/bt_nuevoEstudiante"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Introducir Profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/bt_nuevoProfe"
        android:layout_below="@+id/bt_nuevoEstudiante"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Borrar Estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/bt_borrarEstudiante"
        android:layout_below="@+id/bt_nuevoProfe"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Borrar Profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/bt_borrarProfe"
        android:layout_below="@+id/bt_borrarEstudiante"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Borrar Base de Datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/bt_borrarBbdd"
        android:layout_below="@+id/bt_borrarProfe"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
