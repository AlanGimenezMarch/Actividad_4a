<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buscar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alan_.actividad_4a.BuscarActivity">

    <TextView
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_buscar"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <CheckBox
        android:text="Estudiantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_buscar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:id="@+id/cb_estudiantes"
        android:textSize="18sp" />

    <CheckBox
        android:text="Profesores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/cb_profesores"
        android:textSize="18sp"
        android:layout_below="@+id/cb_estudiantes"
        android:layout_alignStart="@+id/cb_estudiantes" />

    <TextView
        android:text="Ciclo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/cb_profesores"
        android:id="@+id/tv_ciclo"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/et_buscaCiclo" />

    <TextView
        android:text="Curso:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_curso"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/et_buscaCiclo"
        android:layout_alignStart="@+id/tv_ciclo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_buscaCurso"
        android:layout_alignBaseline="@+id/tv_curso"
        android:layout_alignBottom="@+id/tv_curso"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:id="@+id/bt_buscar" />
</RelativeLayout>
