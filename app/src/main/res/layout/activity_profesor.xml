<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profesor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alan_.actividad_4a.ProfesorActivity">

    <TextView
        android:text="Profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_title"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="31dp"
        android:id="@+id/tv_nombre"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nombre"
        android:layout_alignStart="@+id/tv_nombre"
        android:layout_marginTop="27dp"
        android:id="@+id/tv_edad"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Ciclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_edad"
        android:layout_alignStart="@+id/tv_edad"
        android:layout_marginTop="28dp"
        android:id="@+id/tv_ciclo"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Tutor de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_tutor"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_curso"
        android:layout_alignStart="@+id/tv_ciclo" />

    <TextView
        android:text="Curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/tv_curso"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_ciclo"
        android:layout_alignStart="@+id/tv_ciclo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/tv_despacho"
        android:layout_marginTop="20dp"
        android:id="@+id/et_nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/et_nombre"
        android:layout_alignStart="@+id/et_nombre"
        android:id="@+id/et_edad" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/et_edad"
        android:layout_alignEnd="@+id/et_edad"
        android:layout_marginTop="12dp"
        android:id="@+id/et_ciclo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_curso"
        android:layout_alignBaseline="@+id/tv_curso"
        android:layout_alignBottom="@+id/tv_curso"
        android:layout_alignStart="@+id/et_ciclo" />

    <TextView
        android:text="Despacho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/tv_despacho"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_tutor"
        android:layout_alignStart="@+id/tv_tutor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_tutor"
        android:layout_alignBaseline="@+id/tv_tutor"
        android:layout_alignBottom="@+id/tv_tutor"
        android:layout_alignStart="@+id/et_curso" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_despacho"
        android:layout_alignBaseline="@+id/tv_despacho"
        android:layout_alignBottom="@+id/tv_despacho"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_despacho"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/bt_guardar" />

</RelativeLayout>
